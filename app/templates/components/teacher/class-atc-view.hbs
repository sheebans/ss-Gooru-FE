<div class="class-view">
  <div class="body">
    <div id="atc-chart">
      <span>Chart Coming Soon!</span>
    </div>
    <div class="class-nav nav-previous {{if isPreviousDisabled 'disable'}}" {{action "onChangeAtcClass" 'previous'}}>
      {{gru-icon name="keyboard_arrow_left"}}
    </div>
    <div class="class-nav nav-next {{if isNextDisabled 'disable'}}" {{action "onChangeAtcClass" 'next'}}>
      {{gru-icon name="keyboard_arrow_right"}}
    </div>
  </div>
  <div class="footer">
    <div class="class-performance">
      <div class="title">
        Class performance
      </div>
      {{#if classData.performance}}
        <div class="performance">
          {{teacher.class-performance-chart data=classPerformanceData performanceColor=classPerformanceColor}}
        </div>
      {{else}}
        <div class="no-performance">
          &dash;&dash;
        </div>
      {{/if}}
    </div>
    <div class="actions">
      <div class="dca" data-toggle="tooltip" title="Daily Class Activities" {{action "onSelectClassItem" 'class-activities' classData.id}}>
        <i class="icon"></i>
      </div>
      <div class="course-map" data-toggle="tooltip" title="Course Map" {{action "onSelectClassItem" 'course-map' classData.id}}>
        <i class="icon"></i>
      </div>
      <div class="performance" data-toggle="tooltip" title="Report" {{action "onSelectClassItem" 'performance' classData.id}}>
        <i class="icon"></i>
      </div>
    </div>
  </div>
</div>
